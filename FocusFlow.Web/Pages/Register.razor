@page "/register"
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Register - FocusFlow</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
                    <rect x="4" y="4" width="40" height="40" rx="12" fill="#22C55E"/>
                    <circle cx="24" cy="20" r="5" stroke="white" stroke-width="2.5" fill="none"/>
                    <path d="M14 36c0-5.523 4.477-10 10-10s10 4.477 10 10" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                    <path d="M32 22V28M29 25H35" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                </svg>
            </div>
            <h1 class="auth-title">Create account</h1>
            <p class="auth-subtitle">Get started with FocusFlow today</p>
        </div>

        <div class="auth-body">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
                <DataAnnotationsValidator />

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">First Name</label>
                        <InputText @bind-Value="registerModel.FirstName" class="form-control" placeholder="John" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Name</label>
                        <InputText @bind-Value="registerModel.LastName" class="form-control" placeholder="Doe" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Username</label>
                    <InputText @bind-Value="registerModel.UserName" class="form-control" placeholder="Choose a username" />
                    <ValidationMessage For="@(() => registerModel.UserName)" />
                </div>

                <div class="form-group">
                    <label class="form-label">Email</label>
                    <InputText @bind-Value="registerModel.Email" type="email" class="form-control" placeholder="you@example.com" />
                    <ValidationMessage For="@(() => registerModel.Email)" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <InputText @bind-Value="registerModel.Password" type="password" class="form-control" placeholder="Create a strong password" />
                    <ValidationMessage For="@(() => registerModel.Password)" />
                    <small class="form-hint">At least 8 characters with uppercase, lowercase, and digit</small>
                </div>

                <button type="submit" class="btn btn-success btn-auth" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    Create account
                </button>
            </EditForm>
        </div>

        <div class="auth-footer">
            <span>Already have an account?</span>
            <a href="/login">Sign in</a>
        </div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 7rem);
        padding: 2rem;
    }

    .auth-card {
        width: 100%;
        max-width: 440px;
        background: rgba(28, 25, 23, 0.8);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        overflow: hidden;
    }

    .auth-header {
        padding: 2.5rem 2rem 1.5rem;
        text-align: center;
    }

    .auth-logo {
        margin-bottom: 1.5rem;
    }

    .auth-logo svg {
        filter: drop-shadow(0 4px 12px rgba(34, 197, 94, 0.3));
    }

    .auth-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #F5F5F4;
        margin: 0 0 0.5rem;
        letter-spacing: -0.02em;
    }

    .auth-subtitle {
        font-size: 0.9375rem;
        color: #78716C;
        margin: 0;
    }

    .auth-body {
        padding: 1rem 2rem 2rem;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-group {
        margin-bottom: 1.25rem;
    }

    .form-hint {
        display: block;
        margin-top: 0.375rem;
        font-size: 0.8125rem;
        color: #78716C;
    }

    .btn-auth {
        width: 100%;
        height: 48px;
        font-size: 0.9375rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    .auth-footer {
        padding: 1.25rem 2rem;
        background: rgba(255, 255, 255, 0.02);
        border-top: 1px solid rgba(255, 255, 255, 0.06);
        text-align: center;
        font-size: 0.875rem;
    }

    .auth-footer span {
        color: #78716C;
        margin-right: 0.375rem;
    }

    .auth-footer a {
        color: #FBBF24;
        font-weight: 500;
    }

    .auth-footer a:hover {
        color: #FCD34D;
    }

    @@media (max-width: 480px) {
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private RegisterModel registerModel = new();
    private string? errorMessage;
    private bool isLoading;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var request = new RegisterRequest(
                registerModel.UserName,
                registerModel.Email,
                registerModel.Password,
                registerModel.FirstName,
                registerModel.LastName
            );

            var result = await AuthService.RegisterAsync(request);

            if (result != null)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "Registration failed. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Registration failed: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class RegisterModel
    {
        public string UserName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
    }
}
