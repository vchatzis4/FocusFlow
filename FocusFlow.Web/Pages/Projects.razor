@page "/projects"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject IProjectService ProjectService
@inject NavigationManager Navigation

<PageTitle>Projects - FocusFlow</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Projects</h1>
    <button class="btn btn-primary" @onclick="ShowCreateModal">
        + New Project
    </button>
</div>

@if (isLoading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!projects.Any())
{
    <div class="alert alert-info">
        No projects yet. Click "New Project" to create your first one.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Tasks</th>
                    <th>Progress</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in projects)
                {
                    <tr>
                        <td><strong>@project.Name</strong></td>
                        <td>@(project.Description ?? "-")</td>
                        <td>
                            <span class="badge bg-secondary">@project.TotalTasks total</span>
                            <span class="badge bg-success">@project.CompletedTasks done</span>
                            @if (project.OverdueTasks > 0)
                            {
                                <span class="badge bg-danger">@project.OverdueTasks overdue</span>
                            }
                        </td>
                        <td>
                            @if (project.TotalTasks > 0)
                            {
                                var pct = GetPercentage(project.CompletedTasks, project.TotalTasks);
                                <div class="progress" style="height: 20px; min-width: 100px;">
                                    <div class="progress-bar bg-success" style="width: @pct%">@pct%</div>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No tasks</span>
                            }
                        </td>
                        <td>@project.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => ShowEditModal(project)">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProject(project.Id)">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Create/Edit Modal -->
@if (showModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditing ? "Edit Project" : "New Project")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <EditForm Model="formModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Name *</label>
                            <InputText @bind-Value="formModel.Name" class="form-control" />
                            <ValidationMessage For="@(() => formModel.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea @bind-Value="formModel.Description" class="form-control" rows="3" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                            }
                            @(isEditing ? "Save Changes" : "Create")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<ProjectDto> projects = new();
    private bool isLoading = true;
    private bool showModal;
    private bool isEditing;
    private bool isSaving;
    private string? errorMessage;
    private Guid? editingProjectId;
    private ProjectFormModel formModel = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProjects();
    }

    private async Task LoadProjects()
    {
        isLoading = true;
        projects = (await ProjectService.GetAllAsync()).ToList();
        isLoading = false;
    }

    private void ShowCreateModal()
    {
        formModel = new ProjectFormModel();
        isEditing = false;
        editingProjectId = null;
        errorMessage = null;
        showModal = true;
    }

    private void ShowEditModal(ProjectDto project)
    {
        formModel = new ProjectFormModel
        {
            Name = project.Name,
            Description = project.Description
        };
        isEditing = true;
        editingProjectId = project.Id;
        errorMessage = null;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            if (isEditing && editingProjectId.HasValue)
            {
                var request = new UpdateProjectRequest(formModel.Name, formModel.Description);
                var result = await ProjectService.UpdateAsync(editingProjectId.Value, request);

                if (result == null)
                {
                    errorMessage = "Failed to update project.";
                    return;
                }
            }
            else
            {
                var request = new CreateProjectRequest(formModel.Name, formModel.Description);
                var result = await ProjectService.CreateAsync(request);

                if (result == null)
                {
                    errorMessage = "Failed to create project.";
                    return;
                }
            }

            CloseModal();
            await LoadProjects();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteProject(Guid id)
    {
        var success = await ProjectService.DeleteAsync(id);
        if (success)
        {
            await LoadProjects();
        }
    }

    private int GetPercentage(int completed, int total)
    {
        if (total == 0) return 0;
        return (int)Math.Round((double)completed / total * 100);
    }

    private class ProjectFormModel
    {
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
    }
}
